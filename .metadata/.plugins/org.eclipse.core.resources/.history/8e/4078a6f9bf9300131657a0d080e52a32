[Config SG_MULTIHOPTEST_001]
network = SG_LRWPAN_001
description= "Test Smart Grid with LRWPAN DC and three nodes in multi hop distance subnet"

##############################################################################
## playground settings
##############################################################################
**.numNodes = 2

#**.constraintAreaMaxX = ${widthX=10m,100m,1000m}
**.constraintAreaMaxX = ${widthX=1000m}
**.constraintAreaMaxY = ${widthY=${widthX}} # square area
#**.constraintAreaMaxY = ${widthY=2000m} # rectangle area

# Data Concentrator
#**.dc.lrwpan.mac.address = "01-02-03-ff-fe-06-07-08" #becomes IPv6: fe80::102:3ff:fe06:708
#**.dc.lrwpan.mac.address = "00-00-01-ff-fe-00-00-00" #becomes IPv6: fe80::1ff:fe00:0:
**.dc.lrwpan.mac.address = "00-00-00-ff-fe-00-00-01" #becomes IPv6: fe80::ff:fe00:0
**.dc.mobility.initialX       = ${dcX=${widthX}/2} # dc in centre (probably unrealistic but should be optimal)
**.dc.mobility.initialY       = ${dcY=${widthY}/2} # dc in centre (probably unrealistic but should be optimal)
#**.dc.mobility.initialX       = ${dcX=uniform(0m,${widthX})} # dc randomly placed (more realistic, but not deterministic)
#**.dc.mobility.initialY       = $dcY=uniform(0m,${widthY})} # dc randomly placed (more realistic, but not deterministic)

# Single hop distance
#**.node[*].mobility.initialX       = uniform(0m,${widthX})
#**.node[*].mobility.initialY       = uniform(0m,${widthY})
**.node[0].lrwpan.mac.address      = "00-00-00-ff-fe-01-00-00"  #becomes IPv6: 
**.node[0].mobility.initialX       = ${dcX}+150m
**.node[0].mobility.initialY       = ${dcY}
**.node[1].lrwpan.mac.address      = "00-00-00-ff-fe-01-01-00"  #becomes IPv6: fe80::ff:fe01:0
**.node[1].mobility.initialX       = ${dcX}+300m
**.node[1].mobility.initialY       = ${dcY}

##############################################################################
## app settings
##############################################################################

##############################################################################
# udp settings
##############################################################################

**.node[1].numUdpApps = 1
**.node[1].udpApp[0].typename = "UDPBasicApp"
**.node[1].udpApp[0].destAddresses = "2002::"
**.node[1].udpApp[0].destPort = 1000
**.node[1].udpApp[0].messageLength = 54B    # Ok
**.node[1].udpApp[0].startTime = 5s
**.node[1].udpApp[0].sendInterval = 1s
**.node[1].udpApp[0].stopTime = 10s

**.dc.numUdpApps = 1
**.dc.udpApp[0].typename = "UDPEchoApp"
**.dc.udpApp[0].localPort = 1000

##############################################################################
## routing settings
##############################################################################
#**.dc.routingTable6 = xmldoc("routing_dc.xml")
**.routingTable6 = xmldoc("routing_test.xml")



[Config SG_MULTIHOPMANUAL_001]
network = SG_LRWPAN_001
description= "Test Smart Grid with LRWPAN DC and ten nodes in multi hop distance subnet"

##############################################################################
## playground settings
##############################################################################
**.numNodes = 8

#**.constraintAreaMaxX = ${widthX=10m,100m,1000m}
**.constraintAreaMaxX = ${widthX=1000m}
**.constraintAreaMaxY = ${widthY=${widthX}} # square area
#**.constraintAreaMaxY = ${widthY=2000m} # rectangle area

# Data Concentrator
#**.dc.lrwpan.mac.address = "01-02-03-ff-fe-06-07-08" #becomes IPv6: fe80::102:3ff:fe06:708
#**.dc.lrwpan.mac.address = "00-00-01-ff-fe-00-00-00" #becomes IPv6: fe80::1ff:fe00:0:
**.dc.lrwpan.mac.address = "00-00-00-ff-fe-00-00-00" #becomes IPv6: fe80::ff:fe00:0
**.dc.mobility.initialX       = ${dcX=${widthX}/2} # dc in centre (probably unrealistic but should be optimal)
**.dc.mobility.initialY       = ${dcY=${widthY}/2} # dc in centre (probably unrealistic but should be optimal)
#**.dc.mobility.initialX       = ${dcX=uniform(0m,${widthX})} # dc randomly placed (more realistic, but not deterministic)
#**.dc.mobility.initialY       = $dcY=uniform(0m,${widthY})} # dc randomly placed (more realistic, but not deterministic)

# Single hop distance
#**.node[*].mobility.initialX       = uniform(0m,${widthX})
#**.node[*].mobility.initialY       = uniform(0m,${widthY})
**.node[0].lrwpan.mac.address      = "00-00-00-ff-fe-01-00-00"  #becomes IPv6: fe80::ff:fe01:0
**.node[0].mobility.initialX       = ${dcX}
**.node[0].mobility.initialY       = ${dcY}+50m
**.node[1].lrwpan.mac.address      = "00-00-00-ff-fe-02-00-00"  #becomes IPv6: 
**.node[1].mobility.initialX       = ${dcX}+150m
**.node[1].mobility.initialY       = ${dcY}
**.node[2].lrwpan.mac.address      = "00-00-00-ff-fe-03-00-00"  #becomes IPv6: 
**.node[2].mobility.initialX       = ${dcX}-100m
**.node[2].mobility.initialY       = ${dcY}

# Multi hop distance
**.node[3].lrwpan.mac.address      = "00-00-00-ff-fe-01-01-00"  #becomes IPv6: 
**.node[3].mobility.initialX       = ${dcX}-50m
**.node[3].mobility.initialY       = ${dcY}+200m
**.node[4].lrwpan.mac.address      = "00-00-00-ff-fe-01-02-00"  #becomes IPv6: 
**.node[4].mobility.initialX       = ${dcX}+50m
**.node[4].mobility.initialY       = ${dcY}+200m
**.node[5].lrwpan.mac.address      = "00-00-00-ff-fe-03-01-00"  #becomes IPv6: 
**.node[5].mobility.initialX       = ${dcX}-200m
**.node[5].mobility.initialY       = ${dcY}
**.node[6].lrwpan.mac.address      = "00-00-00-ff-fe-01-01-01"  #becomes IPv6: 
**.node[6].mobility.initialX       = ${dcX}-150m
**.node[6].mobility.initialY       = ${dcY}+200m
**.node[7].lrwpan.mac.address      = "00-00-00-ff-fe-02-01-00"  #becomes IPv6: 
**.node[7].mobility.initialX       = ${dcX}+300m
**.node[7].mobility.initialY       = ${dcY}

#**.node[3].lrwpan.mac.address      = "00-00-01-ff-fe-01-03-00"
#**.node[3].mobility.initialX       = ${widthX}-${widthX}/4
#**.node[3].mobility.initialY       = ${widthY}/2

##############################################################################
## app settings
##############################################################################

##############################################################################
# udp settings
##############################################################################

**.numUdpApps = 1

**.node[*].udpApp[0].typename = "UDPBasicApp"
**.node[*].udpApp[0].destAddresses = "dc"
**.node[*].udpApp[0].destPort = 1000
**.node[*].udpApp[0].messageLength = 54B    # Ok
**.node[3].udpApp[0].startTime = 5s
**.node[*].udpApp[0].startTime = 5s + uniform(0.5s,1s)
#**.node[*].udpApp[0].startTime = 5s + uniform(0s,1s)
**.node[*].udpApp[0].sendInterval = 1s
**.node[*].udpApp[0].stopTime = 10s

**.dc.udpApp[0].typename = "UDPEchoApp"
**.dc.udpApp[0].localPort = 1000

##############################################################################
## routing settings
##############################################################################
#**.dc.routingTable6 = xmldoc("routing_dc.xml")
**.dc.routingTable6 = xmldoc("routing.xml")


[Config SG_SINGLEHOPMANUAL_001]
network = SG_LRWPAN_001
description= "Test Smart Grid with LRWPAN DC and four nodes in one hop distance subnet"

##############################################################################
## playground settings
##############################################################################
**.numNodes = 4

#**.constraintAreaMaxX = ${widthX=10m,100m,1000m}
**.constraintAreaMaxX = ${widthX=100m}
**.constraintAreaMaxY = ${widthY=${widthX}} # square area
#**.constraintAreaMaxY = ${widthY=2000m} # rectangle area

#**.dc.lrwpan.mac.address = "01-02-03-ff-fe-06-07-08" #becomes IPv6: fe80::102:3ff:fe06:708
**.dc.lrwpan.mac.address = "00-00-01-ff-fe-00-00-00" #becomes IPv6: fe80::1ff:fe00:0:
**.dc.mobility.initialX       = ${widthX}/2 # dc in centre (probably unrealistic but should be optimal)
**.dc.mobility.initialY       = ${widthY}/2 # dc in centre (probably unrealistic but should be optimal)
#**.dc.mobility.initialX       = uniform(0m,${widthX}) # dc randomly placed (more realistic, but not deterministic)
#**.dc.mobility.initialY       = uniform(0m,${widthY}) # dc randomly placed (more realistic, but not deterministic)
#**.node[*].mobility.initialX       = uniform(0m,${widthX})
#**.node[*].mobility.initialY       = uniform(0m,${widthY})
**.node[0].lrwpan.mac.address = "00-00-01-ff-fe-01-00-00"
**.node[0].mobility.initialX       = ${widthX}/3
**.node[0].mobility.initialY       = ${widthY}/3
**.node[1].lrwpan.mac.address = "00-00-01-ff-fe-01-01-00"
**.node[1].mobility.initialX       = ${widthX}/5
**.node[1].mobility.initialY       = ${widthY}-${widthY}/5
**.node[2].lrwpan.mac.address = "00-00-01-ff-fe-01-02-00"
**.node[2].mobility.initialX       = ${widthX}-${widthX}/5
**.node[2].mobility.initialY       = ${widthY}/5
**.node[3].lrwpan.mac.address = "00-00-01-ff-fe-01-03-00"
**.node[3].mobility.initialX       = ${widthX}-${widthX}/4
**.node[3].mobility.initialY       = ${widthY}/2

##############################################################################
## app settings
##############################################################################

##############################################################################
# udp settings
##############################################################################

**.numUdpApps = 1

**.node[*].udpApp[0].typename = "UDPBasicApp"
**.node[*].udpApp[0].destAddresses = "dc"
**.node[*].udpApp[0].destPort = 1000
#**.node[*].udpApp[0].messageLength = 50B    # Ok
**.node[*].udpApp[0].messageLength = 54B    # Ok
#**.node[*].udpApp[0].messageLength = 55B    # Nok
#**.node[*].udpApp[0].messageLength = 100B   # Nok
**.node[*].udpApp[0].startTime = 5s
#**.node[*].udpApp[0].startTime = 5s + uniform(0s,1s)
**.node[*].udpApp[0].sendInterval = 1s
**.node[*].udpApp[0].stopTime = 10s

**.dc.udpApp[0].typename = "UDPEchoApp"
**.dc.udpApp[0].localPort = 1000

##############################################################################
## routing settings
##############################################################################
