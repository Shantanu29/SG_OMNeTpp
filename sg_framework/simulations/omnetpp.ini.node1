##############################################################################
#**.numNodes = 10
**.numNodes = 10

#**.constraintAreaMaxX = ${widthX=10m,100m,1000m}
**.constraintAreaMaxX = ${widthX=1000m}
**.constraintAreaMaxY = ${widthY=${widthX}} # square area
#**.constraintAreaMaxY = ${widthY=2000m} # rectangle area

# Backend
**.backend.mobility.initialX       = 0m
**.backend.mobility.initialY       = 0m

# Data Concentrator
#**.dc.lrwpan.mac.address = "01-02-03-ff-fe-06-07-08" #becomes IPv6: fe80::102:3ff:fe06:708
#**.dc.lrwpan.mac.address = "00-00-01-ff-fe-00-00-00" #becomes IPv6: fe80::1ff:fe00:0:
#**.dc.lrwpan.mac.address = "00-00-00-ff-fe-00-00-01" #becomes IPv6: fe80::ff:fe00:0
**.dc.mobility.initialX       = ${dcX=${widthX}/2}
**.dc.mobility.initialY       = ${dcY=${widthY}/2}
#**.dc.mobility.initialX       = ${dcX=uniform(0m,${widthX})} # dc randomly placed (more realistic, but not deterministic)
#**.dc.mobility.initialY       = $dcY=uniform(0m,${widthY})} # dc randomly placed (more realistic, but not deterministic)

# Single hop distance
#**.node[*].mobility.initialX       = uniform(0m,${widthX})	// Makes no sense because wireless routing not working
#**.node[*].mobility.initialY       = uniform(0m,${widthY}) 
**.node[0].mobility.initialX       = ${dcX}
**.node[0].mobility.initialY       = ${dcY}+50m
**.node[1].mobility.initialX       = ${dcX}+150m
**.node[1].mobility.initialY       = ${dcY}
**.node[2].mobility.initialX       = ${dcX}-100m
**.node[2].mobility.initialY       = ${dcY}

# Multi hop distance 
**.node[3].mobility.initialX       = ${dcX}-50m
**.node[3].mobility.initialY       = ${dcY}+200m
**.node[4].mobility.initialX       = ${dcX}+50m
**.node[4].mobility.initialY       = ${dcY}+200m
**.node[5].mobility.initialX       = ${dcX}-200m
**.node[5].mobility.initialY       = ${dcY}
**.node[6].mobility.initialX       = ${dcX}-150m
**.node[6].mobility.initialY       = ${dcY}+200m
**.node[7].mobility.initialX       = ${dcX}+300m
**.node[7].mobility.initialY       = ${dcY}
**.node[8].mobility.initialX       = ${dcX}-50m
**.node[8].mobility.initialY       = ${dcY}+300m
**.node[9].mobility.initialX       = ${dcX}+50m
**.node[9].mobility.initialY       = ${dcY}+300m

